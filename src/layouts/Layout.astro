---
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Engineering Portfolio" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Navigation />
		<div class="content-wrapper">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 27, 77, 62;       /* #1B4D3E - Rich Boston green */
		--accent-light: 41, 102, 84; /* #296654 - Lighter green for better contrast */
		--accent-dark: 18, 51, 41;   /* #12332A - Deep forest green */
		--background: 245, 241, 235; /* Keeping the cream background */
		--text: 51, 41, 46;         /* Keeping the text color */
		--card-bg: 238, 234, 228;   /* Keeping the card background */
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			rgb(var(--background)) 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: rgb(var(--background));
		scroll-behavior: smooth;
		width: 100%;
		overflow-x: hidden;
	}
	body {
		margin: 0;
		padding: 0;
		color: rgb(var(--text));
		width: 100%;
		overflow-x: hidden;
		box-sizing: border-box;
	}
	*, *:before, *:after {
		box-sizing: inherit;
	}
	.content-wrapper {
		padding-top: 1rem;
		width: 100%;
		overflow-x: hidden;
	}
	main {
		width: 100% !important;
		max-width: 1200px !important;
		margin: 0 auto !important;
		padding: 1rem !important;
		overflow-x: hidden !important;
	}
	img {
		max-width: 100%;
		height: auto;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	@media (max-width: 768px) {
		main {
			padding: 1rem 0.5rem !important;
		}
		.content-wrapper {
			padding-top: 0.5rem;
		}
	}
</style>