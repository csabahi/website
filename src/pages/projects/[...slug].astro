---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <main>
    <article class="project">
      <header>
        <h1>{entry.data.title}</h1>
        <div class="metadata">
          <time datetime={entry.data.date.toISOString()}>
            {entry.data.date.toLocaleDateString()}
          </time>
          <div class="tags">
            {entry.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      </header>

      {entry.data.image && (
        <img 
          src={entry.data.image} 
          alt={entry.data.title}
          class="featured-image"
        />
      )}

      <div class="links">
        {entry.data.github && (
          <a href={entry.data.github} target="_blank" rel="noopener noreferrer" class="button">
            View on GitHub
          </a>
        )}
        {entry.data.demo && (
          <a href={entry.data.demo} target="_blank" rel="noopener noreferrer" class="button">
            Live Demo
          </a>
        )}
      </div>

      <div class="content">
        <Content />
      </div>
    </article>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 900px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .project {
    background: rgba(var(--accent-dark), 0.2);
    border-radius: 8px;
    padding: 2rem;
  }
  header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 2.5rem;
    margin: 0;
    color: rgb(var(--accent-light));
  }
  .metadata {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
    align-items: center;
    font-size: 0.9rem;
  }
  .featured-image {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
    margin: 2rem 0;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
  }
  .tag {
    background: rgba(var(--accent-light), 0.1);
    padding: 0.2rem 0.8rem;
    border-radius: 999px;
    font-size: 0.8rem;
  }
  .links {
    display: flex;
    gap: 1rem;
    margin: 2rem 0;
  }
  .button {
    background: rgb(var(--accent));
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background-color 0.2s;
  }
  .button:hover {
    background: rgb(var(--accent-dark));
  }
  .content {
    margin-top: 2rem;
  }
  .content :global(h2) {
    color: rgb(var(--accent-light));
    margin: 2rem 0 1rem;
  }
  .content :global(ul) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
</style>