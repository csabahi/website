---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import ImageGallery from '../components/ImageGallery.astro';
import Timeline from '../components/Timeline.astro';

const projects = await getCollection('projects');
projects.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const featuredImages = [
  '/gallery/bhf1.JPG',
  '/gallery/engDay.JPG',
  '/gallery/stressTest.jpg',
  '/gallery/musashi1.jpg',
  '/gallery/windmill.jpg',
  '/gallery/musashi2.jpg',
  '/gallery/goats.jpg',
  '/gallery/bhf2.JPG'
];

const timelineEvents = [
  {
    date: 'May 2024',
    title: 'Biked Around Netherlands',
    description: 'Spent 5 days cycling around the Netherlands, exploring the beautiful towns and countryside.'
  },
  {
    date: 'June 2022',
    title: 'Ride to Conquer Cancer',
    description: 'Rode 220km over 2 days between Toronto and Niagara, raising $1,500 and awareness for cancer research'
  },
  {
	date: 'May 2022',
	title: 'Graduation Award from York Mills Collegiate Institute',
	description: 'Sole recipient of the "Excellence in Education" award for academic achievement and leadership'
  },
  {
	date: 'May 2020',
	title: 'Silver Medalist at <a href="https://www.utsc.utoronto.ca/programs/torontosciencefair/silver-medals/" target="_blank" rel="noopener noreferrer">Toronto Science Fair</a>',
	description: 'Awarded silver medal for my study regarding the negative effects of vehicle emissions on plant growth'
  }
];

const internships = [
  'Robotics Engineering Intern @ BH Frontier Solutions (Fall 2024)',
  'Optical Systems Engineering Intern @ Musashi AI (Winter 2024)',
  'R&D Engineering Intern @ Bend All Automotive (Summer 2023)'
];
---

<Layout title="Hey! I'm Camron">
	<main>
		<section class="hero">
			<h1>Hey there! I'm Camron</h1>
			<p class="subtitle">Engineering Student & Robotics Enthusiast</p>
		</section>

		<section class="featured-images">
			<ImageGallery images={featuredImages} />
		</section>

		<section class="about">
			<h2>About Me</h2>
			<div class="about-content">
				<div class="about-text">
					<p>
						I am an avid cyclist, snowboarder, and Arsenal F.C Fan!
						I am a passionate engineering student with a focus on innovative solutions
						and practical applications - particularly robotics solutions. My journey in engineering has led me to explore
						various technologies and methodologies, always striving to learn and grow.
					</p>
				</div>
			</div>
		</section>

		<section class="projects">
			<h2>Featured Projects</h2>
			<div class="project-grid">
				{projects.map((project) => (
					<a href={`/projects/${project.slug}`} class="project-card">
						<div class="image-container">
							{project.data.image && (
								<img src={project.data.image} alt={project.data.title} />
							)}
						</div>
						<div class="project-content">
							<h3>{project.data.title}</h3>
							<p>{project.data.description}</p>
							<div class="tags">
								{project.data.tags.map((tag) => (
									<span class="tag">{tag}</span>
								))}
							</div>
						</div>
					</a>
				))}
			</div>
		</section>

		<section class="experience">
			<h2>Professional Experience</h2>
			<ul class="experience-list">
				{internships.map(internship => (
					<li>{internship}</li>
				))}
			</ul>
		</section>

		<section class="timeline-section">
			<h2>My Journey</h2>
			<Timeline events={timelineEvents} />
		</section>
	</main>
</Layout>

<style>
	main {
		color: rgb(var(--text));
		font-size: 20px;
		line-height: 1.6;
	}
	.hero {
		text-align: center;
		padding: 4rem 0 1rem;
	}
	h1 {
		font-size: clamp(2rem, 5vw, 3.5rem);
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1rem;
		color: rgb(var(--accent-dark));
	}
	.subtitle {
		font-size: clamp(1.2rem, 3vw, 1.5rem);
		color: rgb(var(--accent-dark));
	}
	.featured-images {
		margin: 1rem auto;
		max-width: 1000px;
		width: 100%;
	}
	.about {
		margin: 2rem 0;
		width: 100%;
	}
	.about-content {
		background: rgba(var(--accent-dark), 0.2);
		border: 1px solid rgba(var(--accent-light), 0.2);
		border-radius: 8px;
		padding: 1.5rem;
		margin: 0 auto;
		width: 100%;
		max-width: 1000px;
	}
	.about-text {
		text-align: center;
	}
	.about-text p {
		margin: 0;
		font-size: clamp(1rem, 2vw, 1.1rem);
		color: rgb(var(--text));
	}
	.experience {
		margin: 4rem 0;
		width: 100%;
	}
	.experience-list {
		list-style: none;
		padding: 0;
		margin: 0;
		font-size: clamp(0.9rem, 2vw, 1.1rem);
	}
	.experience-list li {
		position: relative;
		padding-left: 1.5rem;
		margin-bottom: 1rem;
		color: rgb(var(--accent-dark));
	}
	.experience-list li::before {
		content: "â€¢";
		position: absolute;
		left: 0;
		color: rgb(var(--accent));
	}
	.projects {
		margin-top: 4rem;
		width: 100%;
	}
	h2 {
		font-size: clamp(1.8rem, 4vw, 2.5rem);
		font-weight: 700;
		margin-bottom: 2rem;
		text-align: center;
		color: rgb(var(--accent-dark));
	}
	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
		gap: 2rem;
		width: 100%;
	}
	.project-card {
		background: rgba(var(--accent-dark), 0.2);
		border: 1px solid rgba(var(--accent-light), 0.2);
		border-radius: 8px;
		overflow: hidden;
		text-decoration: none;
		color: rgb(var(--text));
		transition: transform 0.2s;
		aspect-ratio: 1;
		display: flex;
		flex-direction: column;
	}
	.project-card:hover {
		transform: translateY(-5px);
	}
	.image-container {
		width: 100%;
		height: 50%;
		overflow: hidden;
	}
	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s;
	}
	.project-card:hover .image-container img {
		transform: scale(1.05);
	}
	.project-content {
		padding: 1.5rem;
		flex-grow: 1;
		display: flex;
		flex-direction: column;
	}
	.project-content h3 {
		margin: 0;
		font-size: clamp(1.1rem, 2vw, 1.25rem);
		color: rgb(var(--accent-dark));
	}
	.project-content p {
		margin: 0.5rem 0;
		font-size: clamp(0.8rem, 1.5vw, 0.9rem);
		flex-grow: 1;
		color: rgb(var(--text));
	}
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: auto;
	}
	.tag {
		background: rgba(var(--accent-dark), 0.2);
		padding: 0.2rem 0.8rem;
		border-radius: 999px;
		font-size: clamp(0.7rem, 1.5vw, 0.8rem);
		color: rgb(var(--accent-dark));
	}

	@media (max-width: 768px) {
		.project-grid {
			grid-template-columns: 1fr;
			gap: 1rem;
		}
		.project-card {
			aspect-ratio: auto;
		}
		.image-container {
			height: 200px;
		}
	}
</style>